{{>layout/header}}

<h1>공모전 신청</h1>
<div class="col-md-12">
    <div class = "row">
        <div class="col-md-6">
            <a href="/activities/save" role="button" class="btn btn-primary">등록</a>
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thread-strong">
        <tr>
            <th>활동 번호</th>
            <th>활동명</th>
            <th>주최사</th>
            <th>주관사</th>
            <th>분야 선택</th>
            <th>접수기간</th>
            <th>접수기간</th>
            <th>내용</th>
            <th>가격</th>
            <th>포스터</th>
            <th>첨부파일</th>
            <th>담당자</th>
            <th>홈페이지</th>
            <th>연락처</th>
            <th>최대 인원</th>
        </tr>
        </thead>
        <tbody id ="tbody">
        {{#activities}}
            <tr>
                <td>{{act_id}}</td>
                <td>{{act_name}}</td>
                <td>{{organizer_plan}}</td>
                <td>{{organizer_manage}}</td>
                <td>{{tag}}</td>
                <td>{{start_period}}</td>
                <td>{{end_period}}</td>
                <td>{{contents}}</td>
                <td>{{price}}</td>
                <td>{{poster}}</td>
                <td>{{file}}</td>
                <td>{{manager}}</td>
                <td>{{page}}</td>
                <td>{{phone_number}}</td>
                <td>{{max_people}}</td>
            </tr>
        {{/activities}}
        </tbody>
    </table>
</div>

{{>layout/footer}}